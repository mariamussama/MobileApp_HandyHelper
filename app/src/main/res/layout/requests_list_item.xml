<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_text_background"
    android:padding="8dp">

    <!-- Title -->

    <!-- Arrow icon -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:text="Husky Dog Wakling"
        android:textColor="#2D4059"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/rightarrow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:tint = "#F9AC0C"
        />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="17sp"
        android:text="I need someone to walk my husky \ndog around the compound"
        android:layout_below="@id/titleText"
        android:layout_alignStart="@id/titleText"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        />

    <!-- Icons and text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionText"
        android:orientation="horizontal">

        <!-- Icon 1 -->
        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="300 EGP"
            android:gravity="center"
            android:layout_marginStart="8dp" />

        <!-- Icon 2 -->
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pencil"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/numofapplications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="12 apps"
            android:gravity="center"
            android:layout_marginStart="8dp" />

        <!-- Icon 3 -->
        <ImageView
            android:id="@+id/icon3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/calendar"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="Today"
            android:gravity="center"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</RelativeLayout>
