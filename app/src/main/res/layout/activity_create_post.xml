<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background split with 20% height -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2D4059"
        android:weightSum="26">

        <!-- Title and Back button -->
        <RelativeLayout
            android:id="@+id/backgroundSplit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_alignParentTop="true"
            android:background="#2D4059">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@android:color/transparent"
                app:tint="#DBE2EF"
                android:src="@drawable/backbtn"
                android:scaleType="fitCenter" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Create a service post"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:background="@drawable/rounded_background"
            android:orientation="vertical">

            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/iconImage"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/listicon"
                        app:tint="#2D4059" />

                    <TextView
                        android:id="@+id/iconText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textColor="#2D4059"
                        android:textSize="25dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Post Title -->
            <EditText
                android:id="@+id/textBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:hint="Enter Post Title"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:textColor="#2D4059"
                android:textSize="16sp" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@id/iconImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/location"
                    app:tint="#2D4059" />

                <TextView
                    android:id="@id/iconText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="#2D4059"
                    android:textSize="25dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Autocomplete TextView -->
            <fragment
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp" />


            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/event"
                    app:tint="#2D4059" />

                <TextView
                    android:id="@+id/iconText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and Time"
                    android:textColor="#2D4059"
                    android:textSize="25dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="MM/DD/YYYY"
                    android:inputType="date"
                    android:padding="8dp"
                    android:textColor="#2D4059"
                    android:textSize="16sp"
                    android:clickable="false"
                    android:focusable="false" />

            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/timeEditText"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="HH:mm"
                    android:inputType="time"
                    android:padding="8dp"
                    android:textColor="#2D4059"
                    android:textSize="16sp"
                    android:clickable="false"
                    android:focusable="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/payments"
                    app:tint="#2D4059" />

                <TextView
                    android:id="@+id/iconText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compensation"
                    android:textColor="#2D4059"
                    android:textSize="25dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/compensationTextBox"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:hint="Enter Price"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:textColor="#2D4059"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/paragraph"
                    app:tint="#2D4059" />

                <TextView
                    android:id="@+id/iconText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#2D4059"
                    android:textSize="25dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/descriptionTextBox"
                android:layout_width="350dp"
                android:height="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:hint="Enter Request Description"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:textColor="#2D4059"
                android:textSize="16sp" />
            <!-- Confirm Button -->
            <Button
                android:id="@+id/confirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:text="Post Request"
                android:backgroundTint="#F9AC0C"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
