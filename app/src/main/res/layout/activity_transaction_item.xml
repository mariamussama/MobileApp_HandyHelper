<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Add your desired views and content here -->

    <LinearLayout
        android:id="@+id/item_linear_layout"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >
        <com.google.android.material.imageview.ShapeableImageView
            app:shapeAppearanceOverlay="@style/square_item_pic"
            app:strokeWidth="2dp"
            app:strokeColor="#D9D9D9"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:background="@drawable/circle_background"
            android:padding="10dp"
            android:src="@drawable/home_item"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Wash Service"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Category"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 EGP"
                    android:textSize="11sp"
                    android:textColor="@color/selected"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yesterday"
                    android:textSize="11sp"
                    android:textColor="@color/selected"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>