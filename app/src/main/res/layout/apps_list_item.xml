<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/rounded_corner_all"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="#2D4059"
                android:layout_gravity="center"
                android:layout_margin="7dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/userImage"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Care"
                    android:textColor="#2D4059"
                    android:textSize="30sp"
                    android:id="@+id/title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walk my dog for 20 minutes"
                    android:textColor="#2D4059"
                    android:textSize="15sp"
                    android:maxLines="3"
                    android:id="@+id/desc"/>
            </LinearLayout>

            <!-- Icon for rejected application -->
            <ImageView
                android:id="@+id/rejectedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/rejected"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="-40dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionText"
            android:orientation="horizontal"
            android:background="#D9D9D9"
            >

            <!-- Icon 1 -->
            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="300 EGP"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2D4059"
                />

            <!-- Icon 2 -->
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pencil"
                android:layout_marginStart="16dp"
                android:Tint="#2D4059"
                />

            <TextView
                android:id="@+id/numofapplications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="12 apps"
                android:gravity="center"
                android:layout_marginStart="8dp" />

            <!-- Icon 3 -->
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/calendar"
                android:layout_marginStart="16dp"
                android:Tint="#2D4059"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="14sp"
                android:text="Today"
                android:gravity="center"
                android:layout_marginStart="8dp" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
