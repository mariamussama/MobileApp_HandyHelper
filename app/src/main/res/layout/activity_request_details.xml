<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBlue"
        android:orientation="vertical"
        android:weightSum="15">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/darkBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Request"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/arrow_back_ios_48px"
                    android:layout_marginStart="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/back"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:background="@drawable/rounded_corner_top"
            android:paddingTop="12dp"
            android:orientation="vertical"
            android:weightSum="17"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:padding="10dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="250dp"
                        app:cardBackgroundColor="@color/darkBlue"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            app:cardCornerRadius="250dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="88dp"
                                android:layout_height="88dp"
                                android:scaleType="centerCrop"
                                android:id="@+id/userImage"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical | end"
                    android:layout_weight="1"
                    android:paddingEnd="40dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkBlue"
                        android:textSize="15sp"
                        android:text="Mohamed Ashraf"
                        android:id="@+id/userName"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkBlue"
                        android:textSize="15sp"
                        android:text="36 years old"
                        android:id="@+id/userAge"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkBlue"
                        android:textSize="15sp"
                        android:text="Male"
                        android:id="@+id/userGender"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/Divider" android:layout_marginHorizontal="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:paddingStart="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/darkBlue"
                    android:id="@+id/RequestTitle"
                    android:layout_weight="1"
                    android:text="Pet Care"
                    android:fontFamily="@font/plexsansbold"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/darkBlue"
                    android:id="@+id/RequestDesc"
                    android:layout_weight="1"
                    android:text="Walk my dog for 20 minutes"
                    android:maxLines="100"
                    android:ellipsize="none"
                    android:scrollHorizontally="false"
                    android:fontFamily="@font/plexsanslight"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <View style="@style/Divider" android:layout_marginHorizontal="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/darkBlue"
                        android:id="@+id/date"
                        android:layout_weight="1"
                        android:text="Date"

                        android:maxLines="5"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:fontFamily="@font/plexsansmed"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/darkBlue"
                        android:id="@+id/RequestDate"
                        android:layout_weight="1"
                        android:text="01/06/2024"
                        android:maxLines="5"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:fontFamily="@font/plexsanslight"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/darkBlue"
                        android:id="@+id/time"
                        android:layout_weight="1"
                        android:text="Time"
                        android:maxLines="5"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:fontFamily="@font/plexsansmed"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/darkBlue"
                        android:id="@+id/RequestTime"
                        android:layout_weight="1"
                        android:text="1:00 pm"
                        android:maxLines="5"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:fontFamily="@font/plexsanslight"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/Divider" android:layout_marginHorizontal="10dp" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"

                    android:background="@drawable/homefill_48px"

                    android:id="@+id/navReq"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/quick_reference_all_48px"
                    android:id="@+id/navPost"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/account_circle_48px"
                    android:id="@+id/navProfile"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>