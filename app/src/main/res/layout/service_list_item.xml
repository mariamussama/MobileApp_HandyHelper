<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_text_background"
    android:padding="8dp"
    android:layout_margin="20dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/pets"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:tint="#F9AC0C" />

    <!-- Title and Description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_toStartOf="@id/arrowIcon"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Husky Dog Walking"
            android:textColor="#2D4059"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I need someone to walk my husky dog around the compound"
            android:textColor="#999999"
            android:textSize="17sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <!-- Arrow icon -->
    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/rightarrow"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:tint="#F9AC0C" />

</RelativeLayout>
